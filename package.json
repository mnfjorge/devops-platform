{
  "name": "platform-frontend",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "start": "node dist/server.js",
    "build": "rm -rf dist && webpack --mode production --config webpack.config.client.js && webpack --mode production --config webpack.config.server.js",
    "build:client": "webpack --mode production --config webpack.config.client.js",
    "build:server": "webpack --mode production --config webpack.config.server.js",
    "dev": "npm-run-all -p dev:server dev:watch-client dev:watch-server",
    "dev:server": "nodemon --watch dist dist/server.js",
    "dev:watch-client": "webpack --mode development --watch --config webpack.config.client.js",
    "dev:watch-server": "webpack --mode development --watch --config webpack.config.server.js",
    "test": "jest"
  },
  "dependencies": {
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-router-dom": "^5.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.4.5",
    "@babel/preset-env": "^7.4.5",
    "@babel/preset-react": "^7.0.0",
    "babel-loader": "^8.0.6",
    "copy-webpack-plugin": "^5.0.3",
    "css-loader": "^2.1.1",
    "html-loader": "^0.5.5",
    "html-webpack-plugin": "^3.2.0",
    "nodemon": "^1.19.0",
    "npm-run-all": "^4.1.5",
    "webpack": "^4.32.2",
    "webpack-cli": "^3.3.2",
    "webpack-dev-server": "^3.4.1",
    "webpack-node-externals": "^1.7.2"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "jest": {},
  "babel": {
    "presets": [
      [
        "@babel/env",
        {
          "targets": {
            "browsers": [
              "last 1 chrome version"
            ]
          }
        }
      ],
      [
        "@babel/react",
        {
          "target": "web"
        }
      ]
    ]
  }
}